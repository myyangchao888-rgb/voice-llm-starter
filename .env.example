# Voice LLM Starter environment configuration
# Copy this file to `.env` and fill in the required values.

# 默认使用的 LLM Provider 与模型
DEFAULT_PROVIDER=aliyun
DEFAULT_MODEL=qwen-turbo

# 阿里云 DashScope 兼容 OpenAI 接口的访问地址与密钥
ALIYUN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
ALIYUN_API_KEY=your_dashscope_api_key

# 语音识别 / 合成后端（按需调整）
DEFAULT_ASR_BACKEND=faster_whisper
DEFAULT_TTS_BACKEND=pyttsx3

# 知识库切分配置（可根据需求调整）
KB_CHUNK_SIZE=500
KB_CHUNK_OVERLAP=50
